{
  "unstable": [
    "kv",
    "cron"
  ],
  "tasks": {
    "build": "./scripts/build.ts",
    "cache": "./scripts/cache.ts",
    "cache:clean": "rm -rf app/cache",
    "gen": "./scripts/gen.ts",
    "start": "./scripts/dev.ts",
    "start:kv": "STORAGE_MODULE=@jollytoad/store-deno-kv ./scripts/dev.ts",
    "start:no-op": "STORAGE_MODULE=@jollytoad/store-no-op ./scripts/dev.ts",
    "start:cache": "USE_CACHE=true ./scripts/dev.ts",
    "start:prod": "deno run --allow-net --allow-env --allow-read ./app/main.ts",
    "mkcert": "mkcert -install -key-file localhost-key.pem -cert-file localhost-cert.pem localhost",
    "deploy": "deno run --allow-sys --allow-net --allow-read --allow-write --allow-env jsr:@deno/deployctl deploy",
    "deployctl": "deno run --allow-sys --allow-net --allow-read --allow-env jsr:@deno/deployctl",
    "reload": "deno cache --reload **/*.ts jsr:@check/deps jsr:@deno/deployctl",
    "check": "deno check **/*.ts",
    "ok": "deno fmt && deno lint && deno task check",
    "lock": "rm -f deno.lock && deno task check",
    "outdated": "deno run --allow-read=. --allow-net=jsr.io,registry.npmjs.org jsr:@check/deps"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@http/jsx-stream",
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "app/routes/_static/sw.js",
    "app/routes/_static/sw_compat.js",
    "app/routes/_static/prism.*",
    ".store"
  ],
  "fmt": {
    "exclude": [
      "app/cache",
      "app/routes.ts"
    ]
  },
  "imports": {
    "@cross/env": "jsr:@cross/env@^1.0.2",
    "@deno/emit": "jsr:@deno/emit@^0.43.0",
    "@http/discovery": "jsr:@http/discovery@^0.19.0",
    "@http/generate": "jsr:@http/generate@^0.19.0",
    "@http/host-deno-deploy": "jsr:@http/host-deno-deploy@^0.19.0",
    "@http/host-deno-local": "jsr:@http/host-deno-local@^0.19.0",
    "@http/interceptor": "jsr:@http/interceptor@^0.19.0",
    "@http/jsx-stream": "jsr:@http/jsx-stream@^0.2.2",
    "@http/request": "jsr:@http/request@^0.19.0",
    "@http/response": "jsr:@http/response@^0.19.0",
    "@http/route": "jsr:@http/route@^0.19.0",
    "@http/route-deno": "jsr:@http/route-deno@^0.19.0",
    "@jollytoad/store": "jsr:@jollytoad/store@^0.3.0",
    "@jollytoad/store-deno-fs": "jsr:@jollytoad/store-deno-fs@^0.3.0",
    "@jollytoad/store-deno-kv": "jsr:@jollytoad/store-deno-kv@^0.3.0",
    "@jollytoad/store-no-op": "jsr:@jollytoad/store-no-op@^0.3.0",
    "@std/async": "jsr:@std/async@^1.0.0-rc.3",
    "@std/collections": "jsr:@std/collections@^1.0.2",
    "@std/fs": "jsr:@std/fs@^1.0.0-rc.3",
    "@std/http": "jsr:@std/http@^1.0.0-rc.2",
    "@std/path": "jsr:@std/path@^1.0.0-rc.3",
    "@std/ulid": "jsr:@std/ulid@^1.0.0-rc.3",
    "esbuild": "npm:esbuild@^0.23.0",
    "esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.10.3",
    "hast-util-raw": "npm:hast-util-raw@^9.0.4",
    "hast-util-to-jsx-runtime": "npm:hast-util-to-jsx-runtime@^2.3.0",
    "mdast-util-from-markdown": "npm:mdast-util-from-markdown@^2.0.1",
    "mdast-util-gfm": "npm:mdast-util-gfm@^3.0.0",
    "mdast-util-to-hast": "npm:mdast-util-to-hast@^13.2.0",
    "micromark-extension-gfm": "npm:micromark-extension-gfm@^3.0.0",
    "openai": "npm:openai@^4.52.1",
    "urlpattern-polyfill": "npm:urlpattern-polyfill@^10.0.0"
  },
  "deploy": {
    "project": "jollytoad",
    "exclude": [
      ".env",
      "localhost-cert.pem",
      "localhost-key.pem",
      "scripts",
      "app/dev.ts"
    ],
    "include": [],
    "entrypoint": "app/main.ts"
  }
}
